<%-include('../partials/header.ejs')%>
<%-include('../partials/main_nav.ejs')%>
<!--Main nav Navigation-->
  
<div class="container">
  <div class="row">
    <div class="col-md-offset-1 col-md-10">
        <h3>Title: <%= survey.title %></h3>
        <h4>Description: <%= survey.description %></h4>
        <h4>Correspondents: <%= survey.survey_count %></h4>
        <br/>
        <a href="/surveys/<%= survey._id%>/questions/add" class="btn btn-primary"><i class="fa fa-plus"></i> Add Question</a>
        <br/>
        <br/>
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th width="80%" colspan="2">Questions:</th>
                    
                </tr>
            </thead>
            <tbody>
            <% for (let count = 0; count < survey.questions.length; count++) { %>
                <tr>
                    <td width="80%">
                        <%= survey.questions[count].question_text %>
                    </td>
                    <td class="right-align">
                        <a href="/surveys/<%=survey._id%>/questions/<%=survey.questions[count]._id%>/edit" class="btn btn-primary"><i class="fas fa-pencil-alt"></i>Edit</a>
                        <a href="/surveys/<%=survey._id%>/questions/<%=survey.questions[count]._id%>/delete" class="btn btn-danger"><i class="fas fa-trash-alt"></i>Delete</a>    
                    </td>
                <tr>
                    <td colspan="2">
                        <table width="100%">
                            <% for (let ctr = 0; ctr < survey.questions[count].options.length; ctr++) { %>
                                <tr>
                                    <td width="70%">
                                        <li>
                                            <%= survey.questions[count].options[ctr].option_text %>
                                            
                                        </li>
                                    </td>
                                    <td width="10%" class="right-align">
                                        <%= Math.round((survey.questions[count].options[ctr].option_count / survey.survey_count) * 100) %>%
                                    </td>
                                    <td class="right-align" width="20%">
                                        <a href="/surveys/<%=survey._id%>/questions/<%=survey.questions[count]._id%>/options/<%=survey.questions[count].options[ctr]._id%>/delete" class="btn btn-danger"><i class="fas fa-trash-alt"></i>Delete</a>
                                    </td>
                                </tr>
                            <% } %>
                            

                        </table>
                        <ul>
                            
                        </ul>
                        <a href="/surveys/<%= survey._id%>/questions/<%= survey.questions[count]._id%>/options/add" class="btn btn-primary"><i class="fa fa-plus"></i> Add Option</a>
                    </td>
                </tr>
            <% } %> 
            </tbody>
        </table>
    </div>
  </div>
</div>


<!--Script section-->
<%-include('../partials/footer.ejs')%>
