<%- include('../partials/header') %>
<%-include('../partials/main_nav.ejs')%>

<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h3 class="text-center">Add a New Survey</h3>
      <br>
      
      <form method="post" action="/surveys/add">
        <div class="form-group" style="margin-bottom: 1.5rem;">
          <label for="title">Title:</label>
          <input type="text" class="form-control" id="title" 
          placeholder="Enter survey title" name="title" required>
        </div>
        <div class="form-group" style="margin-bottom: 1.5rem;">
          <label for="description">Description:</label>
          <textarea class="form-control" id="description" rows="3"
          placeholder="Enter survey description" name="description" required></textarea>
        </div>
        <div class="text-center">
          <button type="submit" class="btn btn-primary">
            <i class="fa fa-check-square-o"></i> Add Survey
          </button>
          <a href="/surveys" class="btn btn-danger">
            <i class="fa fa-undo"></i> Cancel
          </a>
        </div>
      </form>
      
    </div>
    <div class="col-md-8 offset-md-2 text-center">
      <ul class="pagination pagination-lg pager" id="myPager"></ul>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
