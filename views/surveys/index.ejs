<%-include('../partials/header.ejs')%>
<%-include('../partials/main_nav.ejs')%>
<!--Main nav Navigation-->
  
<div class="container">
  <div class="row">
    <div class="col-md-offset-1 col-md-10">
      <h3>Surveys</h3>
      <a href="/surveys/add" class="btn btn-primary"><i class="fa fa-plus"></i> Add a survey</a>
      <br>
      <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover">
          <thead>
            <tr>
              <th>Title</th>
              <th class="text-center">Description</th>
              <th class="text-center"></th>
              <th class="text-center"></th>
            </tr>
            </thead>
            <tbody>
            <!-- Template Row -->
            <% for (let count = 0; count < surveys.length; count++) { %>
              <tr>
                <td><%= surveys[count].title %></td>
                <td class="text-center"><%= surveys[count].description %></td>
                <td class="text-center">
                  <a href="/surveys/<%=surveys[count]._id%>/edit" class="btn btn-primary"><i class="fas fa-pencil-alt"></i>Edit</a></td>
                </td>
                <td class="text-center">
                  <a href="/surveys/<%=surveys[count]._id%>/delete" class="btn btn-danger"><i class="fas fa-trash-alt"></i>Delete</a>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
       <div class="col-md-offset-1 col-md-10 text-center">
        <ul class="pagination pagination-lg pager" id="myPager"></ul>
      </div>
    </div>
  </div>
</div>

<!-- Add survey form -->
<div class="modal fade" id="addSurveyModal" tabindex="-1" role="dialog" aria-labelledby="addSurveyModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <form method="post" action="/surveys/add">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="addSurveyModalLabel">Add Survey</h4>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <label for="title" class="control-label">Title:</label>
            <input type="text" class="form-control" id="title" name="title" required>
          </div>
          <div class="form-group">
            <label for="description" class="control-label">Description:</label>
            <textarea class="form-control" id="description" name="description" required></textarea>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Add</button>
        </div>
      </form>
    </div>
  </div>
</div>

<!--Script section-->
<%-include('../partials/footer.ejs')%>
